if [ -z $FUNCNAME ]; then
    echo "Not called from function, exiting..."
else
    # Foreground colors

    local BLACKFG=`tput setaf 0`
    local REDFG=`tput setaf 1`
    local GREENFG=`tput setaf 2`
    local YELLOWFG=`tput setaf 3`
    local BLUEFG=`tput setaf 4`
    local MAGENTAFG=`tput setaf 5`
    local CYANFG=`tput setaf 6`
    local WHITEFG=`tput setaf 7`
    local DEFAULTFG=`tput setaf 9`


    # Background colors

    local BLACKBG=`tput setab 0`
    local REDBG=`tput setab 1`
    local GREENBG=`tput setab 2`
    local YELLOWBG=`tput setab 3`
    local BLUEBG=`tput setab 4`
    local MAGENTABG=`tput setab 5`
    local CYANBG=`tput setab 6`
    local WHITEBG=`tput setab 7`
    local DEFAULTBG=`tput setab 9`


    # Attributes

    local RESET=`tput sgr0`
    local BOLD=`tput bold`
    local DIM=`tput dim`
    local UNDERLINE=`tput smul`
    local NOUNDERLINE=`tput rmul`
    local BLINK=`tput blink`
    local REVERSE=`tput rev`
    local HIDDEN=`tput invis`


    # Erasing

    # CLR_END=`tput el`
    # CLR_START=`tput el1`
    # CLR_LINE=`tput el2`


    # Cursor

    local CUR_SAVE=`tput sc`
    local CUR_REST=`tput rc`
    local BACKSPACE=`tput cub1`
    local INVIS=`tput civis`
    local VIS=`tput cvvis`
fi
